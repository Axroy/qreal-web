<?xml version="1.0" encoding="UTF-8" ?>
<Elements>

	<NotVisible>

		<Element name="Link" type="ControlFlow">
            <Property key="Guard" name="Guard" type="combobox">
                <value key=""></value>
                <Variants>
                    <variant key="false">false</variant>
                    <variant key="iteration">iteration</variant>
                    <variant key="true">true</variant>
                </Variants>
             </Property>
        </Element>

	</NotVisible>

	<Visible>
    
		<Palette>
		    
		    <Category name="Algorithms">

		        <Element name="Initial Node" type="InitialNode">
		            <Image src="images/initialBlock.svg"/>
		        </Element>

		        <Element name="Final Node" type="FinalNode">
		            <Image src="images/finalBlock.svg"/>
		        </Element>

		    </Category>

		    <Category name="Actions">

		        <Element name="Say" type="TrikSay">
		            <Property key="Evaluate" name="Evaluate" type="checkbox">
		                <value>false</value>
		            </Property>
		            <Property key="Text" name="Text" type="string">
		                <value>Hi!</value>
		            </Property>
		            <Image src="images/sayBlock.svg"/>
		        </Element>

		    </Category>

		    <Category name="Wait">

		        <Element name="Timer" type="Timer">
		            <Property key="Delay" name="Delay (ms)" type="string">
		                <value>1000</value>
		            </Property>
		            <Image src="images/timerBlock.svg"/>
		        </Element>

		    </Category>

		    <Category name="Drawing">

		        <Element name="Smile" type="TrikSmile">
		            <Image src="images/smileBlock.svg"/>
		        </Element>

		        <Element name="Sad Smile" type="TrikSadSmile">
		            <Image src="images/sadSmileBlock.svg"/>
		        </Element>

		    </Category>
		
		</Palette>

	</Visible>

</Elements>
