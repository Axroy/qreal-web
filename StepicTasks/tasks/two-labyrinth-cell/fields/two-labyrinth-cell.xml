<?xml version='1.0' encoding='utf-8'?>
<root>
    <world>
        <walls/>
        <colorFields>
            <line stroke-style="solid" fill="#000000" stroke-width="6" begin="-100:-150" fill-style="none" stroke="#000000" id="" end="-100:0"/>
            <line stroke-style="solid" fill="#000000" stroke-width="3" begin="-100:0" fill-style="none" stroke="#000000" id="" end="50:0"/>
            <line stroke-style="solid" fill="#000000" stroke-width="6" begin="50:0" fill-style="none" stroke="#000000" id="" end="50:-150"/>
            <line stroke-style="solid" fill="#000000" stroke-width="6" begin="50:-150" fill-style="none" stroke="#000000" id="" end="-100:-150"/>
            <line stroke-style="solid" fill="#000000" stroke-width="6" begin="-100:0" fill-style="none" stroke="#000000" id="" end="-100:150"/>
            <line stroke-style="solid" fill="#000000" stroke-width="6" begin="-100:150" fill-style="none" stroke="#000000" id="" end="50:150"/>
            <line stroke-style="solid" fill="#000000" stroke-width="6" begin="50:150" fill-style="none" stroke="#000000" id="" end="50:-10"/>
        </colorFields>
        <regions>
            <region filled="true" visible="false" height="25" width="25" y="-88" color="#0000ff" id="start_zone" x="-38" type="rectangle"/>
            <region filled="true" visible="false" height="5" width="25" y="75" color="#ff0000" id="finish_zone" x="-38" type="rectangle"/>
        </regions>
    </world>
    <robots>
        <robot direction="0" position="-50:-100" id="trikV62KitRobot">
            <sensors>
                <sensor direction="0" port="E3###input###M3###encoder3" position="0:0" type=""/>
                <sensor direction="0" port="M4###output######" position="0:0" type=""/>
                <sensor direction="0" port="E2###input###M2###encoder2" position="0:0" type=""/>
                <sensor direction="0" port="E4###input###M4###encoder4" position="0:0" type=""/>
                <sensor direction="0" port="E1###input###M1###encoder1" position="0:0" type=""/>
                <sensor direction="0" port="M3###output######" position="0:0" type=""/>
            </sensors>
            <startPosition y="-75" direction="0" x="-25"/>
            <wheels left="M3###output######" right="M4###output######"/>
        </robot>
    </robots>
    <constraints>
        <timelimit value="20000"/>
        <!-- Проверка начального положения -->
        <constraint checkOnce="true" failMessage="Робот должен находиться в начальной точке перед запуском программы!">
            <inside regionId="start_zone" objectId="robot1"/>
        </constraint>
        <!-- Событие, которое говорит о том, что робот вообще поехал и стартует цепочку проверки -->
        <event id="We are alive, first move" settedUpInitially="true">
            <condition>
                <greater>
                    <objectState object="robot1.M3.power"/>
                    <int value="0"/>
                </greater>
            </condition>
            <triggers>
                <setUp id="Finish"/>
            </triggers>
        </event>
        <!-- Событие, которое выдает ошибку, если робот не тронулся с места в первую секунду -->
        <event id="Waiting for going forward too long" settedUpInitially="true">
            <conditions glue="and">
                <timer forceDropOnTimeout="true" timeout="1000"/>
                <settedUp id="We are alive, first move"/>
            </conditions>
            <trigger>
                <fail message="Робот так и не поехал в первую секунду"/>
            </trigger>
        </event>
        <!-- Событие, которое говорит, что задание выполнено, когда робот приезжает на финиш, и программа заканчивает работу -->
        <event id="Finish">
            <conditions glue="and">
                <timer forceDropOnTimeout="false" timeout="50"/>
                <inside regionId="finish_zone" objectId="robot1"/>
            </conditions>
            <triggers>
                <setUp id="Leave finish"/>
                <success deferred="true"/>
            </triggers>
        </event>
        <!-- Событие, которое сообщает об ошибке, если робот приехал на финиш, но потом уехал с него" -->
        <event id="Leave finish">
            <condition>
                <not>
                    <inside regionId="finish_zone" objectId="robot1"/>
                </not>
            </condition>
            <trigger>
                <fail message="Робот приехал в нужное место, но уехал дальше"/>
            </trigger>
        </event>
    </constraints>
</root>
