<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        id="linear"
        orientation="vertical"
        layout_width="fill_parent"
        layout_height="fill_parent"
        background="#e3e3e3">

  <ImageView
          layout_width="300dp"
          layout_height="120dp"
          src="https://dl.dropbox.com/u/10802739/lt_logo.jpg"
          gravity="center"
          layout_marginTop="10dp"
          layout_marginLeft="90dp"/>

  <TextView
          layout_width="fill_parent"
          layout_height="wrap_content"
          layout_marginTop="40dp"
          padding="20dp"
          text="LANIT-TERCOM is one of the few Russian IT companies which are able not only to fulfil industrial contracts, but also to carry out challenging science-intensive programming projects."
          textSize="20dp"
          gravity="center"/>

  <Button
          layout_width="fill_parent"
          layout_height="wrap_content"
          text="Full Info"
          textSize="20dp"
          layout_marginTop="300dp"
          onClick="info2"
          layout_gravity="center_horizontal"/>
</LinearLayout>


