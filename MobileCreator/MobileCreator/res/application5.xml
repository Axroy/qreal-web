<application name='patients'>
<logic>
<action control-id='button6'>
<login-request url='http://localhost:54321' login-id='editText3' password-id='editText5' />
</action>
<trigger form-id='main' event='onShow'>
</trigger>
<trigger form-id='main' event='onTimer'>
</trigger>
<trigger form-id='main' event='onLoginResponse'>
<if condition='loginSuccess'>
<then>
<transition form-id='Map' />
</then>
<else>
<transition form-id='Failed' />
</else>
</if>
</trigger>
<trigger form-id='main' event='onPatientsResponse'>
</trigger>
<trigger form-id='Map' event='onShow'>
<patients-request url='http://localhost:54321' />
</trigger>
<trigger form-id='Map' event='onTimer'>
</trigger>
<trigger form-id='Map' event='onLoginResponse'>
</trigger>
<trigger form-id='Map' event='onPatientsResponse'>
<showmap id='map8' />
</trigger>
<trigger form-id='Failed' event='onShow'>
</trigger>
<trigger form-id='Failed' event='onTimer'>
</trigger>
<trigger form-id='Failed' event='onLoginResponse'>
</trigger>
<trigger form-id='Failed' event='onPatientsResponse'>
</trigger>
</logic>
<forms>
<form form_name="main">
<LinearLayout 
xmlns="http://schemas.android.com/apk/res/android" 
orientation="vertical" layout_width="fill_parent" layout_height="fill_parent" background="#ffffff"> 
<TextView 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="10px" padding="0px" text="Hello!" textSize="26px" />
<TextView 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="10px" padding="0px" text="Login:" textSize="26px" />
<EditText 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="10px" id="editText3" padding="0px" text="px" />
<TextView 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="10px" padding="0px" text="Password:" textSize="26px" />
<EditText 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="10px" id="editText5" padding="0px" text="px" />
<Button 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="20px" text="Button" textSize="15px" id="button6" />
</LinearLayout>
</form>
<form form_name="Map">
<LinearLayout 
xmlns="http://schemas.android.com/apk/res/android" 
orientation="vertical" layout_width="fill_parent" layout_height="fill_parent" background="#ffffff"> 
<Map 
layout_width="fill_parent" layout_height="fill_parent" id="map8" />
</LinearLayout>
</form>
<form form_name="Failed">
<LinearLayout 
xmlns="http://schemas.android.com/apk/res/android" 
orientation="vertical" layout_width="fill_parent" layout_height="fill_parent" background="#ffffff"> 
<TextView 
layout_width="fill_parent" layout_height="wrap_content" layout_marginTop="10px" padding="0px" text="Failed!!!!" textSize="26px" />
<ImageView 
layout_width="wrap_content" layout_height="wrap_content" src="http://files.gamebanana.com/img/ico/sprays/failed.png" layout_gravity="center_horizontal" layout_marginTop="10px" />
</LinearLayout>
</form>
</forms>
</application>